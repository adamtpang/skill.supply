{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/bounties/sync",
      "schedule": "0 * * * *"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite"
}
